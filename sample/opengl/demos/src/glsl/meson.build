  'convolutions',
  'deriv',
  'fragcoord',
  'fsraytrace',
  'geom-outlining-130',
  'geom-outlining-150',
  'geom-sprites',
  'geom-stipple-lines',
  'geom-wide-lines',
  'identity',
  'linktest',
  'mandelbrot',
  'multinoise',
  'multitex',
  'noise2',
  'noise',
  'pointcoord',
  'points',
  'samplers',
  'shadow_sampler',
  'shtest',
  'simplex-noise',
  'skinning',
  'texaaline',
  'texdemo1',
  'toyball',
  'trirast',
  'twoside',
